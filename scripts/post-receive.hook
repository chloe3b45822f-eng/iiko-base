#!/bin/bash

###############################################################################
# Git Hook для автоматического деплоя
# 
# Этот скрипт запускается автоматически при push в репозиторий
###############################################################################

GIT_WORK_TREE=/var/www/iiko-base
GIT_DIR=$GIT_WORK_TREE/.git

echo "Получение изменений..."
cd $GIT_WORK_TREE
git checkout -f

echo "Запуск деплоя..."
./scripts/deploy.sh

echo "Деплой завершен!"
